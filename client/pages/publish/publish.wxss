/* pages/publish/publish.wxss */

.root {
    background: #efeff4;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
}
.line {
    padding-top: 30rpx;
}

.line-control {
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}

.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid;
    height: 90rpx;
    line-height: 90rpx;
}
.line-control .item-image {
    text-align: center;
}

.line-control .item {
    box-sizing: border-box;
    text-align: left;
    color: #007AFF;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative;
}

.line-control .item-image .image {
    width: 380rpx;
    height: 380rpx;
    text-align: center;
    margin: 10rpx;
}

.line-control .item:active {
    background: #d9d9d9;
}
.line-control .item.flag {
    color: #333;
}
.line-control .item.flag:active {
    background: #fff;
}


.line-control .item:last-child .item-inner {
     border:none;
}
.line-control .switch {
    vertical-align: middle;
    line-height: normal;
}
.line-control text {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
    color: #8E8E93;
    margin-left: 0;
}
.line-control .switch-status {
    color: #999;
    position: absolute;
    right: 40rpx;
    top: 0;
}
.line-control .item.disabled {
    color: #999
}
.line-control .item.disabled:active {
    background: none;
}
.publish_input {
    height: 40px;
}



